@model System.Collections.Generic.List<MySite.Models.Blog>

@{
    ViewBag.Title = "Блог";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-4">
        @foreach (var blog in Model.Where((item, index) => index % 3 == 0))
        {
            <div class="row">
                <div class="col">
                    @await Html.PartialAsync("BlogCard", blog)
                    <br/>
                </div>
            </div>
        }
    </div>
    <div class="col-4">

        @foreach (var blog in Model.Where((item, index) => index % 3 == 1))
        {
            <div class="row">
                <div class="col">
                    @await Html.PartialAsync("BlogCard", blog)
                    <br />
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        @foreach (var blog in Model.Where((item, index) => index % 3 == 2))
        {
            <div class="row">
                <div class="col">
                    @await Html.PartialAsync("BlogCard", blog)
                    <br />
                </div>
            </div>
        }
    </div>
</div>
